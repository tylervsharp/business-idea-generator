<%= erb(:_errors) %>
<br><br>

<div class="row">
  <div class="row center">
      <h5>Sign In</h5>
  </div>

  <form class="col s8 offset-s2" action="/login" method="post">
    <div class="row-center">
      <div class="input-field col s12">
        <i class="material-icons prefix">email</i>
        <input id="icon_email" type="email" class="validate" name="user[email]">
        <label for="icon_email">Email Address</label>
      </div>
    </div>
    <div class="row-center">
      <div class="input-field col s12">
        <i class="material-icons prefix">vpn_key</i>
        <input id="icon_password" type="password" class="validate" name="user[password]">
        <label for="icon_password">Password</label>
      </div>
    </div>
    <div class="row center">
      <input id="download-button" class="btn-large waves-effect waves-light indigo darken-4" type="submit" value="Log In">
    </div>
  </form>
</div>
